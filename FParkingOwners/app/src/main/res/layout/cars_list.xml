<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvBienso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"

            android:text="29L5 - 23523"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvBienso"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Được đánh giá:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvTypeCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTypeCar"
            android:layout_marginTop="25dp"
            android:text="Tốt"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="72dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/tvTypeCar"
            android:background="@drawable/button_selector"
            android:text="THANH TOÁN"
            android:textColor="#FFFFFF"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="73dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/btnAccept"
            android:background="@drawable/button_cancel"
            android:text="HỦY"
            android:textColor="#FFFFFF"
            android:textSize="8sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>