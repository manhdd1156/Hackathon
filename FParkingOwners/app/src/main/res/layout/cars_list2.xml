<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvBienso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_action_license_plate"
            android:gravity="center_vertical"
            android:text="29L5 - 23523"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tvmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_action_money"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvCheckin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvBienso"
            android:layout_below="@+id/tvBienso"
            android:drawableLeft="@drawable/ic_action_checkin"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/tvCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvmoney"
            android:layout_below="@+id/tvBienso"
            android:drawableLeft="@drawable/ic_action_checkout"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>